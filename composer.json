{
    "name": "hmsweb/percy",
    "description": "Repository, Storage and DataMapper abstraction to aid in the building of Web Applications and RESTful APIs.",
    "keywords": [
        "hmsweb",
        "data",
        "mapper",
        "respository",
        "psr-7",
        "storage",
        "entity"
    ],
    "homepage": "https://github.com/hmsweb/percy",
    "license": "MIT",
    "authors": [
        {
            "name": "Phil Bennett",
            "email": "philipobenito@gmail.com",
            "homepage": "http://www.philipobenito.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.6",
        "aura/filter": "^2.0",
        "aura/sql": "^2.4",
        "aura/sqlquery": "^2.6",
        "cocur/slugify": "^1.4",
        "psr/http-message": "^1.0",
        "ramsey/uuid": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "^5.0"
    },
    "autoload": {
        "psr-4": {
            "Percy\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Percy\\Test\\": "test"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1-dev"
        }
    }
}
